<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/general_help"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:padding="5dp"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="outsideInset"
    android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            style="@style/General_Help_TextView"
            android:text="@string/general_usage" />

        <TextView
            style="@style/General_Help_TextView"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="@string/general_usage_step1" />

        <TextView
            style="@style/General_Help_TextView"

            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="@string/general_usage_step2" />

        <TextView
            style="@style/General_Help_TextView"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="@string/general_usage_step3" />

        <TextView
            style="@style/General_Help_TextView"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="@string/general_usage_step4" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:dividerHorizontal"
        android:showDividers="middle|beginning"
        >
        <TextView
            style="@style/General_Help_TextView"
            android:text="@string/zoom"
            app:drawableLeftCompat="@drawable/new_zoom" />

        <TextView
            style="@style/General_Help_TextView"
            android:text="@string/crop"
            app:drawableLeftCompat="@drawable/new_cut" />


        <TextView
            style="@style/General_Help_TextView"
            android:text="@string/navigation_help"
            app:drawableLeftCompat="@drawable/new_navigation" />

        <TextView
            style="@style/General_Help_TextView"
            android:text="@string/dictionary_help"
            app:drawableLeftCompat="@drawable/new_dictionary" />

        <TextView
            style="@style/General_Help_TextView"
            android:text="@string/option_help"
            app:drawableLeftCompat="@drawable/new_settings" />

        <TextView
            style="@style/General_Help_TextView"
            android:text="@string/tap_help"
            app:drawableLeftCompat="@drawable/new_tap_zones" />

        <TextView
            style="@style/General_Help_TextView"
            android:text="@string/bookmarks_export_help"
            app:drawableLeftCompat="@drawable/new_export_notes" />

        <TextView
            style="@style/General_Help_TextView"
            android:text="@string/apply"
            app:drawableLeftCompat="@drawable/new_apply" />


        <TextView
            style="@style/General_Help_TextView"
            android:text="@string/escape"
            app:drawableLeftCompat="@drawable/new_revert"
            />

    </LinearLayout>
    </LinearLayout>
</ScrollView>