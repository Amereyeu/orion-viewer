<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="appIconTint" format="color|reference"/>
    <attr name="navIconTint" format="color|reference"/>
    <attr name="menuIconTint" format="color|reference"/>

    <style name="General_Help_TextView" >

        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?attr/menuIconTint</item>
        <item name="drawableTint">?attr/navIconTint</item>
    </style>

    <style name="New_Viewer_Menu_Item" >
        <item name="android:padding">3dp</item>
        <item name="android:background">@color/orion_orange</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:width">32dp</item>
        <item name="android:height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Tap_Dialog_Top" >
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Tap_Dialog_Bottom" parent="Tap_Dialog_Top" >
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Tap_Dialog_Cell" >
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/orion_orange</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Orion.Dark.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="navIconTint">@color/toolbar_icon_tint_ligth</item>
        <item name="appIconTint">?attr/navIconTint</item>
        <item name="menuIconTint">?attr/navIconTint</item>
    </style>

    <style name="Theme.Orion.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="navIconTint">@color/toolbar_icon_tint</item>
        <item name="appIconTint">?attr/navIconTint</item>
        <item name="menuIconTint">?attr/navIconTint</item>
    </style>
</resources>
