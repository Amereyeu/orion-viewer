                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="@dimen/text_size_large"
                              android:text="Orion Viewer v. "/>

                    <TextView
                        android:id="@+id/about_version_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/versionName"
                        android:layout_marginRight="10dp"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="@dimen/text_size_large"
                          android:text="Authors: Michael Bogdanov &amp; Co"
                          android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>


        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/project_ino_1" android:layout_marginTop="20dp"
