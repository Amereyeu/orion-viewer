<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/orion_orange">

    <ImageButton android:id="@+id/stext_open_dictionary" android:layout_width="wrap_content" android:layout_height="wrap_content"
                 app:srcCompat="@drawable/dictionary" android:background="#ffcc66" android:padding="10dp"/>

    <ImageButton android:id="@+id/stext_add_bookmark" android:layout_width="wrap_content" android:layout_height="wrap_content"
                 app:srcCompat="@drawable/add_bookmark" android:background="#ffcc66" android:padding="10dp"/>

    <ImageButton android:id="@+id/stext_copy_to_clipboard" android:layout_width="wrap_content" android:layout_height="wrap_content"
                     app:srcCompat="@drawable/copy" android:background="#ffcc66" android:padding="10dp"/>

    <ImageButton android:id="@+id/stext_send_text" android:layout_width="wrap_content" android:layout_height="wrap_content"
                             app:srcCompat="@drawable/external_edit"  android:background="#ffcc66" android:padding="10dp"/>

</LinearLayout>