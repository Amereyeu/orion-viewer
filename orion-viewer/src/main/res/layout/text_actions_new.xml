<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/orion_orange">

    <ImageButton
        android:id="@+id/stext_open_dictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffcc66"
        android:padding="10dp"
        app:srcCompat="@drawable/new_dictionary" />

    <ImageButton
        android:id="@+id/stext_add_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffcc66"
        android:padding="10dp"
        app:srcCompat="@drawable/new_bookmark_add" />

    <ImageButton
        android:id="@+id/stext_copy_to_clipboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffcc66"
        android:padding="10dp"
        app:srcCompat="@drawable/new_copy" />

    <ImageButton
        android:id="@+id/stext_send_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffcc66"
        android:padding="10dp"
        app:srcCompat="@drawable/new_share" />

</LinearLayout>