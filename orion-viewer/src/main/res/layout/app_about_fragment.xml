            android:gravity="center" android:linksClickable="true" android:autoLink="web"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="E-mail: mikhael.bogdanov+orion@gmail.com" android:textSize="@dimen/text_size_medium"
            android:gravity="center" android:linksClickable="true" android:autoLink="email"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/project_ino_2" android:textSize="@dimen/text_size_medium"
            android:text="Bug reporting: https://github.com/max-kammerer/orion-viewer/issues"
            android:gravity="center" android:linksClickable="true" android:autoLink="web"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/project_ino_3" android:textSize="@dimen/text_size_medium"
            android:text="Discussion group: https://groups.google.com/group/orionviewer"
            android:gravity="center" android:linksClickable="true" android:autoLink="web"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/project_ino_4" android:textSize="@dimen/text_size_medium"
